{
  "RelativeLayoutExample2": {
    "type": "FrameLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "padding": "16dp",
    "paddingBottom": "0dp",
    "children": [
      {
        "type": "RelativeLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "background": "#ffffff",
        "children": [
          {
            "type": "ImageView",
            "src": "https://www.jumpstarttech.com/files/2018/08/Network-Profile.png",
            "id": "center",
            "layout_width": "100sp",
            "layout_height": "100sp",
            "layout_centerVertical": true,
            "layout_centerHorizontal": true
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginBottom": "4dp",
            "layout_above": "center",
            "layout_centerHorizontal": true
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginTop": "4dp",
            "layout_below": "center",
            "layout_centerHorizontal": true
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginLeft": "4dp",
            "layout_toRightOf": "center",
            "layout_centerVertical": true
          },
          {
            "type": "ImageView",
            "src": "@drawable/star_filled",
            "layout_marginRight": "4dp",
            "layout_toLeftOf": "center",
            "layout_centerVertical": true
          }
        ]
      }
    ]
  },
  "DataDrivenExample": {
    "type": "FrameLayout",
    "layout_width": "match_parent",
    "layout_height": "wrap_content",
    "padding": "16dp",
    "paddingBottom": "0dp",
    "children": [
      {
        "type": "LinearLayout",
        "orientation": "horizontal",
        "layout_width": "match_parent",
        "background": "#ffffff",
        "padding": "16dp",
        "children": {
          "@": {
            "collection": "@{fn:slice(@{user.tags},0,5)}",
            "layout": {
              "type": "TextView",
              "data": {
                "tag": "@{user.tags[$index]}"
              },
              "layout_marginRight": "8dp",
              "layout_height": "32sp",
              "textColor":"#3F51B5",
              "text": "@{tag}",
              "padding": "8dp",
              "gravity": "center",
              "onClick": "@{tag}"
            }
          }
        }
      }
    ]
  },
  "RecyclerViewExample": {
    "type": "FrameLayout",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "padding": "16dp",
    "paddingBottom": "0dp",
    "children":[
      {
        "type": "RecyclerView",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "id":"@+id/rvBanner",
        "background": "#ffffff",
        "orientation":"horizontal",
        "data": {
          "items": "@{data.achievements}"
        },
        "layout_manager": {
          "type": "LinearLayoutManager"
        },
        "adapter": {
          "@": {
            "type": "SimpleListAdapter",
            "item-count": "@{items.$length}",
            "item-layout": {
              "type": "ImageView",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "layout_marginLeft":"4sp",
              "layout_marginRight":"4sp",
              "src": "https://img.freepik.com/free-psd/corporate-digital-business-marketing-promotion-facebook-cover-photo-web-banner_161103-103.jpg?size=626&ext=jpg",
              "layout_gravity":"center_horizontal",
              "onClick": {
                "someKey": "someValue"
              }
            }
          }
        }
      }
    ]
  },
  "AlertDialogLayout": {
    "type": "LinearLayout",
    "orientation": "vertical",
    "layout_width": "80dp",
    "layout_height": "wrap_content",
    "padding": "20dp",
    "children": [
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "layout_marginTop": "16dp",
        "gravity": "center",
        "textColor": "#ffaa77",
        "textSize": "32sp",
        "text": "This is an alert!"
      },
      {
        "type": "TextView",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "gravity": "center",
        "textSize": "22sp",
        "text": "press ok to continue."
      }
    ]
  }
}
